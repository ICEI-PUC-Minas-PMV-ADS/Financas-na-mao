@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Redefinir senha";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="col-md-4 verde p-2 recupSenhaBox" style="border-radius: 30px">
        <h2 class="text-light text-center">Esqueceu sua senha?</h2>
        <div class="row">
            <div class="col-md-4">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="w-100 btn btn-lg btn-primary">Redefinir senha</button>
                </form>
            </div>
        </div>

    </div>
 </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
