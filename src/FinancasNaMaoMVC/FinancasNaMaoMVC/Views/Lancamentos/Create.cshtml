@model FinancasNaMaoMVC.Models.Lancamento;

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/style.css">

<div class="d-flex flex-column justify-content-center align-items-center" style="width: 80%; background-color: white;box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px; border-radius: 10px; padding: 1.5rem; text-align: center; margin: 0 auto;">
    <form asp-action="Create" style="width: 100%; height: 100%">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <h2 style="padding: 1rem; color: #a6a6a6; text-align: center">Nova Movimentação</h2>

        <div class="d-flex justify-content-around align-items-center " style="padding: 1rem; height: 200px">

            <div class="d-flex flex-column justify-content-around align-items-center">
                <div class="form-group" style="margin: 1rem;">
                    <input asp-for="Nome" class="form-control-custom" placeholder="Nome da Despesa" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group form-check" style="margin: 1rem;">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="isFixo" />
                        <span>Despesa Fixa</span>
                    </label>
                </div>
            </div>

            <div class="d-flex flex-column  justify-content-around align-items-center">
                <div class="form-group" style="margin: 1rem;">
                    <input asp-for="Valor" class="form-control-custom" placeholder="Valor" />
                    <span asp-validation-for="Valor" class="text-danger"></span>
                </div>
                <div style="text-align: center" style="margin: 1rem;">
                    <div class="form-group ">
                        <select asp-for="CategoriaID" class="form-control-custom" asp-items="ViewBag.CategoriaID"></select>
                    </div>
                    <a class="link" asp-area="" asp-controller="Categorias" asp-action="Create">+ Incluir nova categoria</a>
                </div>
            </div>

            <div class="d-flex flex-column  justify-content-around align-items-center ">
                <div class="form-group" style="margin: 1rem;">
                    <input asp-for="Data" class="form-control-custom" placeholder="Data" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin: 1rem;">
                    <input asp-for="Natureza" class="form-control-custom" placeholder="Natureza" />
                    <span asp-validation-for="Natureza" class="text-danger"></span>
                </div>
            </div>
        </div>


        <div class="d-flex justify-content-around align-items-center p-2 m-2">
            <div class="form-group">
                <textarea class="form-text-area" placeholder="Observações" asp-for="Obs" cols="60" rows="5"></textarea>
                <span asp-validation-for="Obs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar despesa" class="nav-link btn-layout-verde" style="margin: 0.8rem;" />
                <a class="nav-link btn-layout-verde" asp-action="Index" style="margin: 0.8rem;">Voltar</a>
            </div>
        </div>
    </form>

</div>

<script src="js/scripts.js"></script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}   