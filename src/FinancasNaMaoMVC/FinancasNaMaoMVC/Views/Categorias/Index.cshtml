        transition: ease 0.5s;
        color: white;
        padding: 10px 60px;
        background-color: #60886e;
        border-radius: 4px;
        border: 1px solid #a6a6a6;
        text-align: center;
    }

    .btn-hover :hover {
        background-color: #ebe7d4;
        border: 1px solid #60886e;
        color: #60886e;
        }
    .btn-hover2 {
        transition: ease 0.5s;
        color: #ebe7d4;
        padding: 10px 60px;
        background-color: #60886e;
        border-radius: 12px;
        border: 2px solid #60886e;
        text-align: center;
        font-weight: 600;
        font-size: 14px;
        margin-top: 60px;
    }

    .btn-hover2 :hover {
        background-color: #ebe7d4;
        border: 1px solid #60886e;
        color: #60886e;
        }

     
