@model FinancasNaMaoMVC.Models.Categoria

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="width: 100%">
    <dl class="row" style="background-color: #F7F7F7; border-radius: 10px; background-color: #60886e; border-radius: 10px; padding:20px 10px; width: 350px; height: 400px; margin: 0 auto;">
        <h4 style="color: white; width:100%; text-align:center; font-size: 28px; margin-bottom: -10px;">Detalhes da categoria</h4>
        <hr />
        <dt class="col-sm-2" style="color: white">

            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10" style="color: white; margin-left: 10px;">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2" style="color: white">
            @Html.DisplayNameFor(model => model.Usuario)
        </dt>
        <dd class="col-sm-10" style="color: white; margin-left: 10px;">
            @Html.DisplayFor(model => model.Usuario.Id)
        </dd>
        <div style="display:flex;">
            <a asp-action="Edit" asp-route-id="@Model?.ID">Editar</a> |
            <a asp-action="Index">Voltar para a lista</a>
        </div>

    </dl>
</div>
